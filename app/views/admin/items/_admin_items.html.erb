<h1>Item Inventory:</h1>

<table class="table">
  <tr>
    <th>Visible?</th>
    <th>Title</th>
    <th>Price</th>
    <th>Actions</th>
  </tr>
  <% @items.each do |item| %>
    <tr class="<%=item.title.parameterize%> table-hover">
      <td>
        <%= check_box item , item.visible?,
            {class: "visible-check"}, true, false %>
      </td>
      <td>
        <%= link_to item.title, item_path(item.slug), class: "lead-column" %>
      </td>
      <td>
        <%= link_to dollar_string(item.price), item, class: "lead-column" %>
      </td>
      <td>
        <%= link_to "Edit", edit_admin_item_path(item),
            class: "btn btn-success lead-column",id: "admin-item-btn"  %>
        <%= link_to admin_item_path(item),
            method: :delete, class: "btn btn-danger" do %>
          Delete
        <% end %>
      </td>
    </tr>
  <% end %>
</table>

<%= link_to "Create New Item", new_admin_item_path,
    class: "btn btn-primary btn-large" %>
